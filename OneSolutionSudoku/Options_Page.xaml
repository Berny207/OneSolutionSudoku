<Page x:Class="OneSolutionSudoku.Options_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OneSolutionSudoku"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>


        <Label Name="Label_ColorsSelection" Style="{StaticResource DefaultLabel}" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0"/>
        <Label Name="Label_PrimaryColor" Style="{StaticResource DefaultLabel}" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="1"/>
        <Label Name="Label_SecondaryColor" Style="{StaticResource DefaultLabel}" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="2"/>
        <Label Name="Label_BackgroundColor" Style="{StaticResource DefaultLabel}" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0" Grid.Column="3"/>
        <xctk:ColorPicker Name="primaryColorPicker" SelectedColor="{Binding boundPrimaryColor, Mode=TwoWay}" Grid.Row="1" Grid.Column="1" Margin="70, 20, 70, 20" Padding="{StaticResource ButtonPadding}"/>
        <xctk:ColorPicker Name="secondaryColorPicker" SelectedColor="{Binding boundSecondaryColor, Mode=TwoWay}" Grid.Row="1" Grid.Column="2" Margin="70, 20, 70, 20" Padding="{StaticResource ButtonPadding}"/>
        <xctk:ColorPicker Name="backgroundColorPicker" SelectedColor="{Binding boundBackgroundColor, Mode=TwoWay}" Grid.Row="1" Grid.Column="3" Margin="70, 20, 70, 20" Padding="{StaticResource ButtonPadding}"/>
        <Label Name="Label_LanguageSelection" Style="{StaticResource DefaultLabel}" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2"/>
        <ComboBox Name="LanguageSelector" ItemsSource="{Binding Languages}" SelectedItem="{Binding boundLanguage, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Padding="{StaticResource ComboBoxPadding}" Margin="{StaticResource ButtonMargin}"/>
        <!--<Label Name="Label_DefaultPathLocation" Style="{StaticResource DefaultLabel}" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="10"/>
        <Label Name="Label_DefaultPath" Style="{StaticResource ScaledLabel}" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="10" Grid.Column="2" Grid.ColumnSpan="2"/>-->
        <Button Name="Button_FolderSelect" Click="Button_FolderSelect_Click" Style="{StaticResource RoundedButton}" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="3" Grid.ColumnSpan="4"/>
        <Button Name="Button_Confirm" Click="Button_Confirm_Click" Style="{StaticResource RoundedButton}" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="4" Grid.ColumnSpan="4"/>
        <Button Name="Button_Defaults" Click="Button_Defaults_Click" Style="{StaticResource RoundedButton}" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="5" Grid.ColumnSpan="4"/>
        <Button Name="Button_Back" Click="Button_Back_Click" Style="{StaticResource RoundedButton}" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="6" Grid.ColumnSpan="4"/>
    </Grid>
</Page>
