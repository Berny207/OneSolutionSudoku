<Application x:Class="OneSolutionSudoku.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:OneSolutionSudoku"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xmlns:media="clr-namespace:System.Windows.Media;assembly=PresentationCore"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <sys:Double x:Key="TextBlockFontSize">32</sys:Double>
        <sys:Double x:Key="ButtonFontSize">24</sys:Double>
        <sys:Double x:Key="ButtonWidth">300</sys:Double>
        <sys:Double x:Key="ButtonHeight">50</sys:Double>
        <Thickness x:Key="ButtonPadding">0, 0, 0, 0</Thickness>
        <Thickness x:Key="ButtonMargin">20, 10, 20, 10</Thickness>
        <Thickness x:Key="ComboBoxPadding">30, 20, 30, 20</Thickness>
        <media:SolidColorBrush x:Key="PrimaryColor" Color="{Binding boundPrimaryColor}"/>
        <media:SolidColorBrush x:Key="SecondaryColor" Color="{Binding boundSecondaryColor}"/>
        <media:SolidColorBrush x:Key="BackgroundColor" Color="{Binding boundBackgroundColor}"/>

        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="FontSize" Value="{DynamicResource ButtonFontSize}"/>
            <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="FontSize" Value="{StaticResource ButtonFontSize}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{DynamicResource PrimaryColor}"
                        BorderThickness="0"
                        CornerRadius="20"
                        Padding="{StaticResource ButtonPadding}"
                        Margin="{StaticResource ButtonMargin}"
                        Width="{StaticResource ButtonWidth}"
                        Height="{StaticResource ButtonHeight}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SecondaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Label" x:Key="DefaultLabel">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="Margin" Value="{StaticResource ButtonMargin}"/>
            <Setter Property="FontSize" Value="{StaticResource TextBlockFontSize}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Label">
                        <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Label" x:Key="ScaledLabel">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="Margin" Value="{StaticResource ButtonMargin}"/>
            <Setter Property="FontSize" Value="{StaticResource TextBlockFontSize}"/>
            <Setter Property="Width" Value="600"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Label">
                        <Viewbox Stretch="Uniform">
                        <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                        </Viewbox>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="TextBox" x:Key="DefaultTextBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{DynamicResource PrimaryColor}"
                        BorderThickness="0"
                        CornerRadius="20"
                        Padding="50, 20, 50, 20"
                        Margin="{StaticResource ButtonMargin}">
                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource SecondaryColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBox" x:Key="SudokuCellTextBox">
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="Background" Value="{DynamicResource PrimaryColor}"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="SudokuCellBorder" TargetType="Border">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="0.5"/>
        </Style>

    </Application.Resources>
</Application>
