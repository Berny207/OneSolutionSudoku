<Page x:Class="OneSolutionSudoku.OwnCreation_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OneSolutionSudoku"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OwnCreation_Page">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Viewbox Stretch="Uniform" Grid.ColumnSpan="4" Margin="10, 10, 10, 10" Grid.Row="0">
            <UniformGrid x:Name="SudokuGrid">
            </UniformGrid>
        </Viewbox>
        <Button Name="Button_Back" Click="Button_Back_Click" Grid.Row="1" Style="{StaticResource RoundedButton}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 0, 0, 10"/>
        <Button Name="Button_Save" Click="Button_Save_Click" Grid.Row="1" Grid.Column="1" Style="{StaticResource RoundedButton}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 0, 0, 10"/>
        <Button Name="Button_Load" Click="Button_Load_Click" Grid.Row="1" Grid.Column="2" Style="{StaticResource RoundedButton}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 0, 0, 10"/>
        <Button Name="Button_Check" Click="Button_Check_Click" Grid.Row="1" Grid.Column="4" Style="{StaticResource RoundedButton}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 0, 0, 10"/>
    </Grid>
</Page>
