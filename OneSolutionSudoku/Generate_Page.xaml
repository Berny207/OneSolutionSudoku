<Page x:Class="OneSolutionSudoku.Generate_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OneSolutionSudoku"
      xmlns:sys="clr-namespace:System;assembly=mscorlib"
      xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Name="Label_FullCellAmountLabel" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource DefaultLabel}"/>
        <TextBox Name="TextBox_FullCellAmount" Text="{Binding fullCellAmountInput}" PreviewTextInput="Preview_Text_Input" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource DefaultTextBox}"/>
        <Button Name="Button_Generate" Click="Button_Generate_Click" Grid.Row="1" Style="{StaticResource RoundedButton}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Name="Button_Stop" Click="Button_Stop_Click" Grid.Row="1" Grid.Column="1" Style="{StaticResource RoundedButton}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Name="Button_Back" Click="Button_Back_Click" Grid.Row="2" Grid.ColumnSpan="2" Style="{StaticResource RoundedButton}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Page>
